<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jabcode</groupId>
  <artifactId>jabcode-java</artifactId>
  <name>JABCode Java Library</name>
  <version>1.0.2-SNAPSHOT</version>
  <description>Java library for generating and decoding JABCode (Just Another Barcode) 2D color barcodes</description>
  <url>https://github.com/jabcode/jabcode-java</url>
  <developers>
    <developer>
      <name>JABCode Team</name>
      <email>info@jabcode.org</email>
      <organization>JABCode</organization>
      <organizationUrl>https://jabcode.org</organizationUrl>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/jabcode/jabcode-java.git</connection>
    <developerConnection>scm:git:ssh://github.com:jabcode/jabcode-java.git</developerConnection>
    <url>https://github.com/jabcode/jabcode-java</url>
  </scm>
  <build>
    <resources>
      <resource>
        <targetPath>com/jabcode</targetPath>
        <directory>${project.basedir}/src/main/c</directory>
        <includes>
          <include>jabcode_c_wrapper.c</include>
          <include>jabcode_c_wrapper.h</include>
          <include>JABCodeNative_jni.cpp</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.build.directory}/classes</directory>
        <includes>
          <include>**/*.so</include>
          <include>**/*.dll</include>
          <include>**/*.dylib</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.bytedeco</groupId>
        <artifactId>javacpp</artifactId>
        <version>${javacpp.version}</version>
        <executions>
          <execution>
            <id>javacpp-parser</id>
            <phase>process-classes</phase>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <skip>false</skip>
              <outputDirectory>${project.build.sourceDirectory}</outputDirectory>
              <classOrPackageName>com.jabcode.JABCodePresets</classOrPackageName>
            </configuration>
          </execution>
          <execution>
            <id>javacpp-compiler</id>
            <phase>process-classes</phase>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <skip>false</skip>
              <classOrPackageNames>
                <classOrPackageName>com.jabcode.internal.JABCodeNative</classOrPackageName>
              </classOrPackageNames>
              <compilerOptions>
                <compilerOption>-std=c++11</compilerOption>
              </compilerOptions>
              <linkPaths>
                <linkPath>${project.basedir}/src/jabcode/build/</linkPath>
                <linkPath>${project.basedir}/../src/jabcode/build/</linkPath>
                <linkPath>${project.basedir}/../src/jabcode/lib/</linkPath>
              </linkPaths>
              <includePaths>
                <includePath>${project.basedir}/src/main/c</includePath>
                <includePath>${project.basedir}/../src/jabcode/include/</includePath>
              </includePaths>
              <sourceFilenames>
                <sourceFilename>${project.basedir}/src/main/c/jabcode_c_wrapper.c</sourceFilename>
                <sourceFilename>${project.basedir}/src/main/c/JABCodeNative_jni.cpp</sourceFilename>
              </sourceFilenames>
              <linkPaths>
                <linkPath>${project.basedir}/src/jabcode/build/</linkPath>
                <linkPath>${project.basedir}/../src/jabcode/build/</linkPath>
                <linkPath>${project.basedir}/../src/jabcode/lib/</linkPath>
                <linkPath>${project.basedir}/lib/</linkPath>
              </linkPaths>
              <libraries>
                <library>jabcode</library>
                <library>png16</library>
                <library>z</library>
              </libraries>
            </configuration>
          </execution>
          <execution>
            <id>javacpp-platform-jar</id>
            <phase>package</phase>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <classOrPackageNames>
                <classOrPackageName>com.jabcode.internal.JABCodeNative</classOrPackageName>
              </classOrPackageNames>
              <properties>${javacpp.platform}</properties>
              <includePaths>
                <includePath>${project.basedir}/src/main/c</includePath>
                <includePath>${project.basedir}/../src/jabcode/include/</includePath>
              </includePaths>
              <sourceFilenames>
                <sourceFilename>${project.basedir}/src/main/c/jabcode_c_wrapper.c</sourceFilename>
                <sourceFilename>${project.basedir}/src/main/c/JABCodeNative_jni.cpp</sourceFilename>
              </sourceFilenames>
              <linkPaths>
                <linkPath>${project.basedir}/src/jabcode/build/</linkPath>
                <linkPath>${project.basedir}/../src/jabcode/build/</linkPath>
                <linkPath>${project.basedir}/../src/jabcode/lib/</linkPath>
                <linkPath>${project.basedir}/lib/</linkPath>
              </linkPaths>
              <libraries>
                <library>jabcode</library>
                <library>png16</library>
                <library>z</library>
              </libraries>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <classPath>${project.build.outputDirectory}</classPath>
          <includePaths>
            <includePath>${project.basedir}/src/main/c</includePath>
            <includePath>${project.basedir}/../src/jabcode/include/</includePath>
          </includePaths>
          <linkPaths>
            <linkPath>${project.basedir}/src/jabcode/build/</linkPath>
            <linkPath>${project.basedir}/../src/jabcode/build/</linkPath>
            <linkPath>${project.basedir}/../src/jabcode/lib/</linkPath>
          </linkPaths>
          <copyLibs>true</copyLibs>
          <properties>${javacpp.platform}</properties>
          <includePaths>
            <includePath>${project.basedir}/src/main/c</includePath>
            <includePath>${project.basedir}/../src/jabcode/include/</includePath>
          </includePaths>
          <linkPaths>
            <linkPath>${project.basedir}/src/jabcode/build/</linkPath>
            <linkPath>${project.basedir}/../src/jabcode/build/</linkPath>
            <linkPath>${project.basedir}/../src/jabcode/lib/</linkPath>
            <linkPath>${project.basedir}/../src/</linkPath>
          </linkPaths>
          <compilerOptions>
            <compilerOption>-std=c++11</compilerOption>
          </compilerOptions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <executions>
          <execution>
            <id>compile-fix-script</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <includes>
                <include>com/jabcode/build/FixBuildDate.java</include>
              </includes>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
          <excludes>
            <exclude>com/jabcode/examples/EnhancedJABCodeExample.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>build-core-lib</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>make</executable>
              <arguments>
                <argument>-C</argument>
                <argument>${project.basedir}/../src/jabcode</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>fix-build-date</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>com.jabcode.build.FixBuildDate</mainClass>
              <classpathScope>compile</classpathScope>
              <arguments>
                <argument>${project.basedir}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>build-native-libraries</id>
            <phase>process-classes</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>true</skip>
              <executable>bash</executable>
              <arguments>
                <argument>${project.basedir}/scripts/build.sh</argument>
                <argument>--core</argument>
                <argument>--jni</argument>
                <argument>--verbose</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>create-symlinks</id>
            <phase>test-compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>bash</executable>
              <arguments>
                <argument>-c</argument>
                <argument>bash ${project.basedir}/scripts/create_symlinks.sh ${project.basedir} ${project.build.directory} ${javacpp.platform}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.6.0</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.2</version>
        <configuration>
          <forkCount>0</forkCount>
          <reuseForks>false</reuseForks>
          <argLine>-Xcheck:jni -Djava.library.path=${project.build.directory}/classes/com/jabcode/${javacpp.platform}:${project.build.directory}/test-classes/com/jabcode/${javacpp.platform}:${project.build.directory}/classes/com/jabcode/${javacpp.platform}:${project.build.directory}/test-classes/com/jabcode/${javacpp.platform}:${project.basedir}/libs:${project.basedir}/lib:${project.basedir}/libs:${project.basedir}/lib:${project.basedir}/../lib:${project.basedir}/libs/linux-x86_64</argLine>
          <environmentVariables>
            <LD_LIBRARY_PATH>${project.build.directory}/classes/com/jabcode/${javacpp.platform}:${project.build.directory}/test-classes/com/jabcode/${javacpp.platform}:${project.basedir}/libs:${project.basedir}/lib:${project.basedir}/../lib:${project.basedir}/libs/linux-x86_64</LD_LIBRARY_PATH>
          </environmentVariables>
          <systemPropertyVariables>
            <skipNativeTests>${skipNativeTests}</skipNativeTests>
            <java.library.path>${project.build.directory}/classes/com/jabcode/${javacpp.platform}:${project.build.directory}/test-classes/com/jabcode/${javacpp.platform}:${project.basedir}/libs:${project.basedir}/lib:${project.basedir}/../lib:${project.basedir}/libs/linux-x86_64</java.library.path>
          </systemPropertyVariables>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <excludes>
            <exclude>**/JABCodeDecoderTest.java</exclude>
          </excludes>
          <additionalClasspathElements>
            <additionalClasspathElement>${project.build.directory}/classes/com/jabcode/${javacpp.platform}</additionalClasspathElement>
            <additionalClasspathElement>${project.basedir}/libs</additionalClasspathElement>
            <additionalClasspathElement>${project.basedir}/libs/linux-x86_64</additionalClasspathElement>
          </additionalClasspathElements>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.bytedeco</pattern>
                  <shadedPattern>com.jabcode.internal.bytedeco</shadedPattern>
                </relocation>
              </relocations>
              <minimizeJar>false</minimizeJar>
              <artifactSet>
                <includes>
                  <include>org.bytedeco:javacpp</include>
                  <include>org.bytedeco:javacpp-platform</include>
                  <include>org.bytedeco:javacpp:*</include>
                </includes>
              </artifactSet>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Build-Date>${maven.build.timestamp}</Build-Date>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.3.1</version>
        <executions>
          <execution>
            <id>copy-native-libraries</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/classes</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}/classes</directory>
                  <includes>
                    <include>com/jabcode/**/*.so</include>
                    <include>com/jabcode/**/*.dll</include>
                    <include>com/jabcode/**/*.dylib</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-native-libraries-to-test</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/test-classes</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}/classes</directory>
                  <includes>
                    <include>com/jabcode/**/*.so</include>
                    <include>com/jabcode/**/*.dll</include>
                    <include>com/jabcode/**/*.dylib</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>3.1.0</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>1.6.13</version>
            <extensions>true</extensions>
            <configuration>
              <serverId>ossrh</serverId>
              <nexusUrl>https://s01.oss.sonatype.org/</nexusUrl>
              <autoReleaseAfterClose>true</autoReleaseAfterClose>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>platform-windows-x86_64</id>
      <properties>
        <javacpp.platform>windows-x86_64</javacpp.platform>
      </properties>
    </profile>
    <profile>
      <id>platform-linux-x86_64</id>
      <properties>
        <javacpp.platform>linux-x86_64</javacpp.platform>
      </properties>
    </profile>
    <profile>
      <id>platform-macosx-x86_64</id>
      <properties>
        <javacpp.platform>macosx-x86_64</javacpp.platform>
      </properties>
    </profile>
    <profile>
      <id>platform-macosx-arm64</id>
      <properties>
        <javacpp.platform>macosx-arm64</javacpp.platform>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.15.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.16.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.imgscalr</groupId>
      <artifactId>imgscalr-lib</artifactId>
      <version>4.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.zxing</groupId>
      <artifactId>core</artifactId>
      <version>3.5.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.zxing</groupId>
      <artifactId>javase</artifactId>
      <version>3.5.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math3</artifactId>
      <version>3.6.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.boofcv</groupId>
      <artifactId>boofcv-core</artifactId>
      <version>0.43</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.twelvemonkeys.imageio</groupId>
      <artifactId>imageio-core</artifactId>
      <version>3.10.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.twelvemonkeys.imageio</groupId>
      <artifactId>imageio-jpeg</artifactId>
      <version>3.10.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.twelvemonkeys.imageio</groupId>
      <artifactId>imageio-tiff</artifactId>
      <version>3.10.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>ossrh</id>
      <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <maven.compiler.source>11</maven.compiler.source>
    <skipNativeTests>false</skipNativeTests>
    <javacpp.version>1.5.9</javacpp.version>
    <maven.compiler.target>11</maven.compiler.target>
    <javacpp.platform>${os.name}-${os.arch}</javacpp.platform>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
